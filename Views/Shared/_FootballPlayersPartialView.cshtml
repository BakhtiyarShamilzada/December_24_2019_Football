@model HomeViewModel
@{
    int counter = 1;
    foreach (var item in Model.FootballPlayers)
    {
    <tr>
        <th scope="row">@(counter++)</th>
        <td>@item.Firstname</td>
        <td>@item.Lastname</td>
        <td>@item.Age</td>
        <td>@item.Position.Name</td>
        <td>@item.Team.Name</td>
        <td>
            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning mr-3" title="Düzəliş et"><i class="far fa-edit"></i></a>
            @if (Model.FootballPlayers.Count() > 1)
            {
                <input type="hidden" value="@item.Id" />
                <a asp-action="Delete" asp-route-id="@item.Id" id="DeleteFootballPlayer" class="btn btn-outline-danger" title="Sil"> <i class="far fa-trash-alt"></i></a>
            }
        </td>
    </tr>
    }
}