@model IEnumerable<Stadium>

@{
    int counter = 1;
    foreach (var item in Model)
    {
        <tr>
            <th scope="row">@(counter++)</th>
            <td><img style="width:100px" src="~/images/@item.Image" /></td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning mr-3" title="Düzəliş et"><i class="far fa-edit"></i></a>
                @if (Model.Count() > 1)
                {
                    <input type="hidden" value="@item.Id" />
                    <a asp-action="Delete" asp-route-id="@item.Id" id="DeleteStadium" class="btn btn-outline-danger" title="Sil"> <i class="far fa-trash-alt"></i></a>
                }
            </td>
        </tr>
    }
}
