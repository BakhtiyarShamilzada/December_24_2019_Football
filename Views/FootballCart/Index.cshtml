@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}

    <section id="home">
        <div class="container">
            @if (TempData["Operation"] != null)
            {
                <div class="row pt-3">
                    <div class="col-12">
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <p class="mb-0">Əməliyyat uğurla icra edildi.</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            }
            <div class="row py-3">
                <div class="col-12 text-right">
                    <a asp-action="Create"
                       class="btn btn-primary">Əlavə et</a>
                </div>
            </div>
            <div class="row py-5">
                <div class="col-12">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Firstname</th>
                                <th scope="col">Lastname</th>
                                <th scope="col">Age</th>
                                <th scope="col">Position</th>
                                <th scope="col">Cart</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                                foreach (var item in Model.FootballCarts)
                                {
                                    <tr>
                                        <th scope="row">@(counter++)</th>
                                        <td>@item.FootballPlayer.Firstname</td>
                                        <td>@item.FootballPlayer.Lastname</td>
                                        <td>@item.FootballPlayer.Age</td>
                                        <td>@Model.Positions.FirstOrDefault(c => c.Id == item.FootballPlayer.PositionId).Name</td>
                                        <td>@item.Cart.Name</td>
                                        <td>@item.Date</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

