@model Stadium
@{
    ViewData["Title"] = "Create";
}

<section>
    <div class="container">
        <div class="row pt-3">
            <div class="col-12">
                <h3 class="mb-0 text-center">Create stadium</h3>
            </div>
        </div>
        <div class="row justify-content-center py-3">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-warning"><i class="fas fa-long-arrow-alt-left"></i></a>
            </div>
        </div>
        <div class="row justify-content-center pt-3">
            <div class="col-6">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Photo">Image</label>
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input asp-for="Photo" accept="image/*" class="custom-file-input" id="CreatePhoto">
                                <label class="custom-file-label" for="CreatePhoto">Choose file</label>
                            </div>
                        </div>
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="display: none" id="CurrentImageArea">
                        <label>Current image</label>
                        <img src="" id="CurrentImage" class="d-block img-thumbnail" width="300" alt="Alternate Text" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" id="exampleInputEmail1"
                               aria-describedby="emailHelp" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" class="form-control" id="exampleInputEmail1"
                               aria-describedby="emailHelp" placeholder="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <button type="submit" class="btn btn-success"> Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

